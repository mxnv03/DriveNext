<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/button_layout"
		android:layout_width="131dp"
		android:layout_height="50dp"
		android:background="@drawable/rounded_button"
		android:gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:foreground="?android:attr/selectableItemBackgroundBorderless"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.881"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.85">

		<TextView
			android:id="@+id/button_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/montserrat_light"
			android:text="Далее"
			android:textColor="#FFFFFF"
			android:textSize="14sp"
			android:textStyle="bold" />
	</LinearLayout>


	<ImageView
		android:id="@+id/imageView"
		android:layout_width="488dp"
		android:layout_height="307dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.355"
		app:srcCompat="@drawable/onboard3"
		tools:ignore="MissingConstraints"
		tools:layout_editor_absoluteX="-39dp"
		tools:layout_editor_absoluteY="149dp" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="105dp"
		android:layout_height="33dp"
		android:fontFamily="@font/montserrat_bold"
		android:text="Пропустить"
		android:textAlignment="center"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.892"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.127" />

	<TextView
		android:id="@+id/textView2"
		android:layout_width="295dp"
		android:layout_height="29dp"
		android:fontFamily="@font/montserrat_bold"
		android:text="Лучшие предложения"
		android:textSize="24sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.494"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView"
		app:layout_constraintVertical_bias="0.089" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="290dp"
		android:layout_height="34dp"
		android:layout_marginTop="20dp"
		android:fontFamily="@font/montserrat_light"
		android:text="Выбирай понравившееся среди сотен доступных автомобилей"
		android:textAlignment="textStart"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.495"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />

	<LinearLayout
		android:layout_width="40dp"
		android:layout_height="8dp"
		android:background="@drawable/black_slide"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.272"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.835" />

	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="16dp"
		android:layout_height="8dp"
		android:background="@drawable/light_slide"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.198"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.835" />

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="16dp"
		android:layout_height="8dp"
		android:background="@drawable/light_slide"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.135"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.835" />


</androidx.constraintlayout.widget.ConstraintLayout>
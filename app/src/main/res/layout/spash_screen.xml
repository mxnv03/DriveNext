<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rtdbt3rapbe9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="117dp"
        android:paddingHorizontal="27dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rmo5ryovqbq"
                android:textColor="#2A1246"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="DriveNext"
                />
            <TextView
                android:id="@+id/r3ko8ytvlqn2"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="118dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Поможем найти твою следующую поездку"
                />
            <ImageView
                android:id="@+id/rm9t11wp5jvs"
                android:layout_width="match_parent"
                android:layout_height="343dp"
                android:src="@drawable/splash"
                android:scaleType="fitXY"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>